<div class="container_sale" id="container_user_show">
  <div class="bg_landing" id="sale_background">
    <%= image_tag("login/LandingBG.jpg", alt: "alttext") %>
    <div class="bg_dark_sale"></div>
  </div>

  <div class="exit_sales_btn">
    <%= link_to newest_products_path do %>
      <i class="far fa-times-circle"></i>
    <% end %>
  </div>

  <!-- User Card -->

  <div class="user_profile_card">

    <div class="user_profile_scroll_box">

      <div class="user_profile_padding" id="user_profile_top">

        <div class="user_profile_img_and_name">

          <div class="user_profile_picture">
            <%= image_tag "logo/octocat.png", class: "user_profile_img" %>
          </div>

          <div class="user_profile_name">
            <%= @user.username %>
          </div>

        </div>

        <div class="user_profile_description">
          <p>
            Hi, I like to do this <br><br>

            And that<br><br>

            And I am moving soon! So get starting to buy my products quickly, or you might find yourself seeing the lamp of your dreams fleeing from right under your nose ;)

            Hi, I like to do this <br><br>

            And that<br><br>

            And I am moving soon! So get starting to buy my products quickly, or you might find yourself seeing the lamp of your dreams fleeing from right under your nose ;)
          </p>

        </div>

      </div>

      <div class="grey_line"></div>

      <div class="user_profile_padding" id="user_profile_rating">

        <p>rating</p>

      </div>

      <div class="grey_line"></div>

      <div class="user_profile_padding" id="user_profile_location">

        <%= current_user.address %>

        <p>24 Follower, Following 14</p>

      </div>
    </div>

    <div class="grey_line"></div>

    <div class="user_profile_padding" id="user_profile_buttons">

      <div class="user_profile_btn">
        <%= link_to "Contact", "#" %>
      </div>

      <div class="user_profile_btn" id="user_follow_btn">
        <%= link_to "Follow", "#" %>
      </div>

    </div>

  </div>

  <!-- Product Grid User Show -->

  <div class="user_profile_product_container">

    <div class="user_profile_product_header">

      <%= @products.count %> Products

      <div class="user_profile_products_filters">

        <div>Category: All</div>

        <div>Order by: Newest</div>

      </div>

    </div>

    <div class="user_profile_product_grid">

      <div class="product_grid_cont">

        <div class="products-grid" id="user_show_product_grid">

          <% @products.each do |product| %>

            <div class="product_linker">

              <div class="product_img">
                <%= cl_image_tag product.image.key %>
              </div>

              <%= link_to deal_show_path(product) do %>

                <div class="product_card">

                  <div class="hover_dark"></div>

                  <div class="info_card">
                    <div>
                      <%= product.name %>
                    </div>
                    <div>
                      <%= product.price %>â‚¬
                    </div>
                  </div>

                </div>

              <% end %>

              <div class="hover_links">

                <div class="links_product">

                  <% if product.wishlist_ids.include?(current_user.id) %>

                    <%= link_to delete_saving_path(current_user.wishlist.id, product), { method: :delete, data: { confirm: "Are you sure about deleting #{product.name} from your Wishlist?" } } do %>
                      <div class="link_svg_full"><%= show_svg('icons/heart_full.svg') %></div>
                    <% end %>

                  <% else %>

                    <%= link_to create_new_saving_path(product), method: :post do %>
                      <div class="link_svg"><%= show_svg('icons/heart.svg') %></div>
                    <% end %>

                  <% end %>

                  <div class="icon_made_by">Icons made by <a href="https://www.flaticon.com/authors/those-icons" title="Those Icons">Those Icons</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a></div>

                </div>

                <div class="links_product">

                  <%= link_to '#' do %>
                    <i class="link_svg"><%= show_svg('icons/supermarket.svg') %></i>
                  <% end %>

                  <div class="icon_made_by">Icons made by <a href="https://www.flaticon.com/authors/freepik" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a></div>

                </div>

              </div>

            </div>

          <% end %>

        </div>

      </div>

    </div>

  </div>

