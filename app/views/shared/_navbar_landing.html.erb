<nav>
  <div class="navbar-mobily">
      <ul class="navbar-links">
        <li class="navbar-logo">
          <%= link_to "Mobily.", "#" %>
        </li>
        <li>
          <div class="loginbox" >
            <%= form_for(resource, as: resource, url: session_path(resource)) do |f| %>
              <div class="login-sub">
                <div class="nav-search-btn">
                    <%= f.email_field :email,
                                     required: false,
                                     autofocus: true,
                                     placeholder: "Email",
                                     label:false %>
                </div>
                <div class="nav-search-btn">
                    <%= f.password_field :password,
                                         required: false,
                                         placeholder: "Password",
                                         label:false %>
                </div>
                <%= f.submit "Login", class: "login-btn" %>
              </div>
            <% end %>
            <div class="shared-links">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </li>
      </ul>
  </div>
</nav>


