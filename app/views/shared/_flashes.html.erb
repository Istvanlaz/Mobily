<% flash.each do |type, message| %>
  <% if type == "alert" %>
    <div class="bg-red-500">
      <div class="container px-2 mx-auto py-3 text-white text-center font-medium font-sans"><%= message %></div>
    </div>
  <% end %>
  <% if type == "notice" %>
    <div class="bg-green-500">
      <div class="container px-2 mx-auto py-3 text-white text-center font-medium font-sans"><%= message %></div>
    </div>
  <% end %>
<% end %>
