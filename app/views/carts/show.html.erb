<p id="notice"><%= notice %></p>
<div class="app-container">
  <h2>Hey fam, this is your cart</h2>
  <ul>
    <% @cart.line_items.each do |item| %>
      <li><%= item.quantity %> &times; <%= item.product.name %> <%= number_to_currency(item.total_price)%></li>
    <% end %>
    <li> Total price<%= number_to_currency(@cart.total_price)%></li>
    <li> Number of items <%= @cart.total_items %></li>
    <%= button_to "Checkout", new_order_path, :method => :get %>
    <%= button_to 'Empty cart', @cart, :method => :delete, data: { confirm: 'Are you sure?' } %>
  </ul>
<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', carts_path %>
</div>
