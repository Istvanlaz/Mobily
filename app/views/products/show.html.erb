<%#= render 'categories/banner' %>
<div class="app-container">
  <div class="show_container">
    <h1>Products#show</h1>
    <p>Find me in app/views/products/show.html.erb</p>
    <div class="space-btn">
      <div class="back-btn">
        <%= link_to "Back", category_products_path(@category)%>
      </div>
    </div>
    <p><%= cl_image_tag @product.image.key, height: 300, width: 300, crop: :fill %></p>
    <p>Name: <%= @product.name %></p>
    <p>Price: <%= @product.price %>€</p>
    <p>Address: <%= @product.address %></p>
    <p>Description: <%= @product.description %></p>
    <% if policy(@product).update? %>
      <p class=“btn btn-primary”><%= link_to "Edit product", edit_product_path(@product) %></p>
    <% end %>
    <% if policy(@product).destroy? %>
      <p class=“btn btn-primary”><%= link_to "Remove product", delete_product_path(@product), { method: :delete, data: { confirm: "Are you Sure about Deleting #{@product.name}?" } } %></p>
    <% end %>
  </div>
  <%= render 'shared/footer' %>
</div>
