<h1>Products#show</h1>
<p>Find me in app/views/products/show.html.erb</p>
<p>Name: <%= @product.name %></p>
<% if policy(@product).update? %>
  <p class=“btn btn-primary”><%= link_to "Edit product", edit_product_path(@product) %></p>
<% end %>
<% if policy(@product).destroy? %>
  <p class=“btn btn-primary”><%= link_to "Remove product", product_path(@product), method: :delete %></p>
<% end %>
