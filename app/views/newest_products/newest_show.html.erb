<%= render 'shared/banner' %>
<%= render 'shared/sub_header_small' %>
<div class="buy-container">
  <div class="newest_show_container">
    <div class="exit_show_btn">
      <%= link_to newest_products_path do %>
        <i class="far fa-times-circle"></i>
      <% end %>
    </div>
    <div class="product_show_img">
      <%= cl_image_tag @product.image.key %>
    </div>
    <div class="product_show_img_card">
      <%= cl_image_tag @product.image.key %>
    </div>
    <div class="product_show_info_card">
      <p style="font-size:30px;"> <%= @product.name %>  </li>
      <p style="font-size: 30px; font-weight: bold; line-height: 16px;"><%= @product.price %>€</p>
      <h5 style ="margin-top: 30px;"> <strong>Description:</strong> Lorem ipsum dolor sit amet, consectetur adipisicing elit. iel quos cupiditate dicta quisquam, error nostrum odit beatae. </h5>
      <h5> <strong>Rating: ⭐⭐⭐⭐⭐</strong> </h5>
      <h5> <strong>Location: </strong> Brussels Area </h5>
      <h5> <strong> 48 </strong> people have seen this product </h5>
      <% if policy(@product).update? %>
        <p class=“btn btn-primary”><%= link_to "Edit product", edit_product_path(@product) %></p>
      <% end %>
      <% if policy(@product).destroy? %>
        <p class=“btn btn-primary”><%= link_to "Remove product", delete_product_path(@product), { method: :delete, data: { confirm: "Are you Sure about Deleting #{@product.name}?" } } %></p>
      <% end %>
      <div class="btn-wrapper">
        <div class="show-sale-btn">
          <%= button_to 'Add to Cart', line_items_path(line_item: {product_id: @product}), {:class => "buy-btn" } %>
        </div>
        <div class="show-sale-btn">
          <%= button_to 'Contact', line_items_path(line_item: {product_id: @product}), {:class => "contact-btn" } %>
          <%= button_to 'Make an Offer', line_items_path(line_item: {product_id: @product}), {:class => "contact-btn" } %>
        </div>
      </div>
      <p style="font-style: lighter; margin-top: -11px;" >MODALITÉS DE PAIMENT: <br /> Payez en toute sécurité par CB ou Paypal</p>
      <p style="font-style: lighter" >SATISFAIT OU REMBOURSÉ <br /> Vous avez 14 jours pour changer d'avis et être remboursé</p>
    </div>
  </div>
  <div class="alsolike_products">
    <div class="orange_line_location">
    </div>
    <div class="title_location">
      You Can Pick it up:
    </div>
    <div class="orange_line_location">
    </div>
  </div>
  <div class="product_location">
    <i class="location_img">
      <img src="/assets/logo/location-screenshot.png" alt="location" style="width:1113px; height: 180px; border-radius: 25px;">
    </i>
  </div>
  <div class="alsolike_products">
    <div class="orange_line_location">
    </div>
    <div class="title_location">
      You May Also Like:
    </div>
    <div class="orange_line_location">
    </div>
  </div>
  <!-- <div class="newest_show_container">
    hello
  </div> -->
  <%= render 'shared/footer' %>
</div>
